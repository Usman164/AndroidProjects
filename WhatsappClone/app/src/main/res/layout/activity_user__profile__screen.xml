<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Profile_Screen">
    <ImageView
        android:id="@+id/user_profile_screen_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:background="@drawable/whatsapp"
        />
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/profile_screen_back_Arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <RelativeLayout
        android:id="@+id/image_view_relative_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/profile_screen_edit_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_edit_24"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/user_profile_screen_user_name_id"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/email_layout_id"
        android:layout_below="@id/image_view_relative_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/user_profile_screen_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student account"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/email_layout_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black_light_disable"
        />
    <LinearLayout
        android:id="@+id/education_layout_id"
        android:layout_below="@id/email_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Education"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_baseline_assignment_24"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/education_layout_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black_light_disable"
        />

    <RelativeLayout
        android:id="@+id/encryption_layout_id"
        android:layout_below="@id/education_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text1_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encryption"
            android:textSize="16dp"
            />
        <TextView
            android:layout_below="@id/text1_id"
            android:id="@+id/text2_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message to this chat and calls are secured"
            android:textSize="13dp"
            />
        <TextView
            android:layout_below="@id/text2_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="with end-to-end encryption. Tap to verify."
            android:textSize="13dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_baseline_lock_24"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/encryption_layout_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black_light_disable"
        />


    <LinearLayout
        android:id="@+id/about_layout_id"
        android:layout_below="@id/encryption_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="16dp"
            android:textColor="@color/whatsappColorCode"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey there! I am using Whatsapp."
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/about_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_light_disable"
        />
</RelativeLayout>